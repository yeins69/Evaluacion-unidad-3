<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tukiaos.tukiaosacademico.control.MenuPrincipalControlador">
    <children>
        <VBox alignment="CENTER" spacing="15.0"
              AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0"
              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <children>
                <Label text="SISTEMA ACADÉMICO" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                <!-- Menú de Personas -->
                <Button text="Apoderados" onAction="#abrirApoderados" prefWidth="250"/>
                <Button text="Alumnos" onAction="#abrirAlumnos" prefWidth="250"/>
                <Button text="Profesores" onAction="#abrirProfesores" prefWidth="250"/>

                <!-- Menú Académico -->
                <Button text="Aulas" onAction="#abrirAulas" prefWidth="250"/>
                <Button text="Cursos" onAction="#abrirCursos" prefWidth="250"/>
                <Button text="Matrículas" onAction="#abrirMatriculas" prefWidth="250"/>
                <Button text="Notas Finales" onAction="#abrirNotasFinales" prefWidth="250"/>

                <!-- Menú Financiero -->
                <Button text="Pensiones / Costos" onAction="#abrirPensiones" prefWidth="250"/>
                <Button text="Pagos" onAction="#abrirPagos" prefWidth="250"/>

                <!-- Configuración -->
                <Button text="Periodos Académicos" onAction="#abrirPeriodos" prefWidth="250"/>
                <Button text="Usuarios y Roles" onAction="#abrirUsuarios" prefWidth="250"/>

                <!-- Salir -->
                <Button text="Salir" onAction="#salir" prefWidth="250" style="-fx-text-fill: red;"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
